@model NewPlanModel

	@{
		ViewData["Title"] = "Create a new plan with your niggas right now";
	}

	<h2>@ViewData["Title"]</h2>



	<div class="form-style-5">
		<form asp-controller="Home" asp-action="NewPlan" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
			<fieldset>
				<legend><span class="number">1</span> Plan Name</legend>
				<div class="form-group">
					
					<div class="col-md-10">
						<input asp-for="PlanName" class="form-control" />
						<span asp-validation-for="PlanName" class="text-danger"></span>
					</div>
				</div>
				<legend><span class="number">2</span> All Usernames</legend>
				<div class="form-group">
					<div class="col-md-10">
						<input asp-for="AllUsernames" class="form-control" />
						<span asp-validation-for="AllUsernames" class="text-danger"></span>
					</div>
				</div>
			</fieldset>
			<input type="submit" value="Create" />
		</form>
	</div>


